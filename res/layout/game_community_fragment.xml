<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/content_fragment_height" xmlns:app1="http://schemas.android.com/apk/res/com.ireadygo.app.gamelauncher">

    <com.ireadygo.app.gamelauncher.ui.widget.HListView
        android:id="@+id/hlv_game_community"
        style="@style/StoreListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusLeft="@+id/hlv_game_community"
        app1:hlv_dividerWidth="@dimen/store_diver_width"
        android:nextFocusRight="@+id/hlv_game_community"
        android:nextFocusUp="@+id/menu_community" />

    <com.ireadygo.app.gamelauncher.ui.widget.OperationTipsLayout
        android:id="@+id/tipsLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tips_height"
        android:layout_alignParentBottom="true">
    </com.ireadygo.app.gamelauncher.ui.widget.OperationTipsLayout>

</RelativeLayout>