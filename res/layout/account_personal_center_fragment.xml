<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="110dp"
    android:orientation="vertical"
    android:weightSum="1" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp" >

        <ImageView
            android:id="@+id/personal_photo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/account_detail_personal_icon" />

        <TextView
            android:id="@+id/account_title"
            style="@style/TextLabelSmallLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/personal_photo"
            android:text="@string/my_pass" />

        <TextView
            android:id="@+id/account"
            style="@style/TextLabelMiddleLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/account_title"
            android:layout_below="@id/account_title"
            android:gravity="center_vertical"
            android:text="123456789" />

        <TextView
            android:id="@+id/nickname_title"
            style="@style/TextLabelSmallLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/personal_nickname"
            android:layout_alignLeft="@+id/personal_nickname"
            android:text="@string/personal_nickname" />

        <EditText
            android:id="@+id/personal_nickname"
            style="@style/TextLabelMiddleLight"
            android:layout_width="480dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/personal_photo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="370dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:text="惊讶的锦衣卫" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp" >

        <TextView
            android:id="@+id/sex_title"
            style="@style/TextLabelSmallLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_sex" />

        <Spinner
            android:id="@+id/personal_sex"
            style="@style/AccountSpinner"
            android:layout_width="480dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@id/sex_title"
            android:layout_below="@id/sex_title"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/personal_modify_pwd"
            style="@style/TextLabelMiddleLight"
            android:layout_width="480dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/personal_sex"
            android:layout_alignParentRight="true"
            android:layout_marginRight="370dp"
            android:gravity="center"
            android:text="@string/personal_modify_password" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp" >

        <TextView
            android:id="@+id/personal_save"
            style="@style/TextLabelMiddleLight"
            android:layout_width="480dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/personal_save" />

        <TextView
            android:id="@+id/personal_logout_btn"
            style="@style/TextLabelMiddleLight"
            android:layout_width="480dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="370dp"
            android:gravity="center"
            android:text="@string/account_logout" />
    </RelativeLayout>

</LinearLayout>