<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/statusbar_height"
    android:background="@drawable/statusbar_background"
    android:gravity="right|center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/handle_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/status_bar_handle_blue"
            android:layout_width="@dimen/statusbar_icon_width"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:paddingRight="@dimen/statusbar_padding_right"
            android:src="@drawable/icon_handle_blue_connected" />

        <ImageView
            android:id="@+id/status_bar_handle_orange"
            android:layout_width="@dimen/statusbar_icon_width"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:paddingRight="@dimen/statusbar_padding_right"
            android:src="@drawable/icon_handle_orange_connected" />

        <ImageView
            android:id="@+id/status_bar_handle_purple"
            android:layout_width="@dimen/statusbar_icon_width"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:paddingRight="@dimen/statusbar_padding_right"
            android:src="@drawable/icon_handle_purple_connected" />

        <ImageView
            android:id="@+id/status_bar_handle_cyan"
            android:layout_width="@dimen/statusbar_icon_width"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:paddingRight="@dimen/statusbar_padding_right"
            android:src="@drawable/icon_handle_cyan_connected" />
    </LinearLayout>

    <ImageView
        android:id="@+id/status_bar_bluetooth"
        android:layout_width="@dimen/statusbar_icon_width"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:paddingRight="@dimen/statusbar_padding_right"
        android:src="@drawable/icon_statusbar_bluetooth_disconnect" />

    <ImageView
        android:id="@+id/status_bar_network"
        android:layout_width="@dimen/statusbar_icon_width"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:paddingRight="@dimen/statusbar_padding_right" />

    <com.ireadygo.app.gamelauncher.statusbar.DigitalClock
        android:id="@+id/status_bar_clock_textview"
        style="@style/Statusbar.Time"
        android:layout_width="@dimen/statusbar_time_width"
        android:layout_height="wrap_content"
        android:text="12:00" />

</LinearLayout>