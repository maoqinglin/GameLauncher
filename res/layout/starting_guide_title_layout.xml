<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/guide_title_layout_height"
    android:orientation="vertical"
    android:paddingLeft="@dimen/guide_title_layout_padding_left"
    android:paddingTop="@dimen/guide_title_layout_padding_top" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/gobackBtn"
            style="@style/GobackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/starting_guide_key_title" />

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/guideWifiSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/guide_title_layout_image_margin_right"
            android:focusable="true"
            android:src="@drawable/starting_guide_wifi_settings_selector"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        android:visibility="invisible" />

</LinearLayout>