<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/search_intro_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/search_intro_margin_bottom"
        android:layout_marginLeft="@dimen/content_fragment_padding_left"
        android:src="@drawable/search_intro" />

    <TextView
        android:id="@+id/search_intro_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextLabelLight"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>