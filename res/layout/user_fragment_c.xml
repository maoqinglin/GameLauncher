<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ireadygo.app.gamelauncher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/content_fragment_padding_left"
    android:paddingTop="@dimen/user_padding_top" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />

        <TextView
            android:id="@+id/not_bind_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_not_bind_account"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/alipay_account_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_alipay_account_state_margin_left"
            android:focusable="true"
            android:nextFocusDown="@+id/user_center_layout"
            android:nextFocusLeft="@+id/menu_user"
            android:text="@string/user_alipay_account_bind"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />
    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_option_margin_top_normal"
        layout="@layout/user_portal" />

</LinearLayout>