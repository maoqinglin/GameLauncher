<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false" >

    <ImageView
        android:id="@+id/background"
        android:layout_width="@dimen/mygame_app_width"
        android:layout_height="@dimen/mygame_app_bg_height"
        android:src="@drawable/corner_app_item_bg_shape" />

    <LinearLayout
        android:layout_width="@dimen/mygame_app_width"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/mygame_app_width"
                android:layout_height="@dimen/mygame_app_height" />

            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/icon"
                android:layout_alignTop="@+id/icon"
                android:src="@drawable/icon_gametask_delete"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            style="@style/mygame_game_text_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mygame_app_name_height"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:scaleX="0.8"
            android:scaleY="0.8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/manager_item_speed_layout"
        android:layout_width="@dimen/mygame_app_width"
        android:layout_height="@dimen/mygame_app_height"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/manager_item_download_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/store_manager_speed_text_size" />

        <TextView
            android:id="@+id/manager_item_download_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/store_manager_speed_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/manager_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/store_manager_status_queue"
        android:layout_marginTop="@dimen/store_manager_status_margin_top"
        android:clickable="true"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/manager_item_download_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/store_manager_progress_width"
        android:layout_height="@dimen/store_manager_progress_height"
        android:layout_marginLeft="@dimen/store_manager_progress_margin_left"
        android:layout_marginTop="@dimen/store_manager_progress_margin_top"
        android:background="@android:color/darker_gray"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_selector_yellow"
        android:visibility="invisible" />

</FrameLayout>