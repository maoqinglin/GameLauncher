<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        style="@style/TextLabelSmallLight"
        android:id="@+id/accountAgeItem"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/personal_age_item_height"
        android:paddingLeft="@dimen/personal_age_item_padding_left"
        android:gravity="center_vertical"
        android:textColor="@android:color/black" />

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/iv_ticket_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/personal_age_item_margin_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_ticket_selected"
        android:visibility="invisible" />

</RelativeLayout>