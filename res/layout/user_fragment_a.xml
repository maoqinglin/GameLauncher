<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ireadygo.app.gamelauncher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/content_fragment_padding_left"
    android:paddingTop="@dimen/user_padding_top" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />

        <TextView
            android:id="@+id/alipay_account_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_alipay_account_state_margin_left"
            android:text="@string/user_alipay_account_bind"
            android:textColor="@color/orange_dark"
            android:textSize="@dimen/user_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_text_margin_top"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_play_time_title"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />

        <ProgressBar
            android:id="@+id/play_time_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/user_play_time_progress_width"
            android:layout_height="@dimen/user_play_time_progress_height"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:progress="0"
            android:progressDrawable="@drawable/user_play_time_progress_list" />

        <TextView
            android:id="@+id/play_time_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_alipay_account_state_margin_left"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_text_margin_top"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/feedback_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />

        <TextView
            android:id="@+id/expired_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_alipay_account_state_margin_left"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />
    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_option_margin_top"
        layout="@layout/user_portal" />

</LinearLayout>