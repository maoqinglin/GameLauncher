<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tips_height"
    android:clipChildren="false"
    android:paddingTop="@dimen/tips_layout_padding_top" 
    android:layout_marginLeft="@dimen/content_padding_left_default"
    >

    <LinearLayout
        android:id="@+id/ll_tips_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tips_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/tips_sun"
            android:drawablePadding="@dimen/tips_drawable_padding"
            android:paddingRight="@dimen/tips_padding_right"
            android:text="@string/shortcut_confirm"
            android:visibility="gone"
            android:textSize="@dimen/tips_text_size" />

        <TextView
            android:id="@+id/tips_mountain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/tips_mountain"
            android:drawablePadding="@dimen/tips_drawable_padding"
            android:text="@string/shortcut_detail"
            android:visibility="gone"
            android:textSize="@dimen/tips_text_size" />
    </LinearLayout>

   <LinearLayout
       android:id="@+id/ll_tips_right"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:gravity="right|center_vertical"
       android:layout_marginRight="@dimen/tips_shortcut_margin"
       android:orientation="horizontal" >

       <TextView
           android:id="@+id/tips_water"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingRight="@dimen/tips_padding_right"
           android:drawableLeft="@drawable/tips_water"
           android:drawablePadding="@dimen/tips_drawable_padding"
           android:text="@string/shortcut_uninstall"
           android:textSize="@dimen/tips_text_size" 
           android:visibility="gone"
           />

       <TextView
           android:id="@+id/tips_moon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:drawableLeft="@drawable/tips_moon"
           android:drawablePadding="@dimen/tips_drawable_padding"
           android:text="@string/shortcut_back"
           android:visibility="gone"
           android:textSize="@dimen/tips_text_size" />
   </LinearLayout>

</RelativeLayout>
