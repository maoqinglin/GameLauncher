<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/ticket_type_item"
        android:layout_width="@dimen/user_recharge_spinner_item_width"
        android:layout_height="@dimen/user_recharge_spinner_item_height"
        android:paddingLeft="@dimen/user_recharge_spinner_item_margin_left"
        android:gravity="center_vertical"
        android:textSize="@dimen/user_recharge_spinner_item_text_size"
        android:textColor="@android:color/black" />

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/iv_ticket_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/user_recharge_spinner_item_margin_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/user_recharge_spinner_item_selected_icon"
        android:visibility="invisible" />

</RelativeLayout>