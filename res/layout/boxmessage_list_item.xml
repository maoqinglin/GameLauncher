<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/boxmessage_list_item_height" >

    <ImageView 
        android:id="@+id/boxmessage_item_icon"
        android:layout_width="@dimen/boxmessage_list_item_icon_width"
        android:layout_height="@dimen/boxmessage_list_item_icon_height"
        android:contentDescription="@null"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/boxmessage_list_item_icon_padding_left"
        />
    
    <ImageView 
        android:id="@+id/boxmessage_item_status"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@android:color/holo_red_light"
        android:contentDescription="@null"
        android:layout_toRightOf="@id/boxmessage_item_icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-10dp"
        />
    
    <TextView 
        android:id="@+id/boxmessage_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/boxmessage_btn_text_size"
        android:layout_toRightOf="@id/boxmessage_item_icon"
        android:layout_marginLeft="@dimen/boxmessage_list_item_title_margin_left"
        android:layout_marginRight="@dimen/boxmessage_list_item_title_margin_left"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        />
    
</RelativeLayout>