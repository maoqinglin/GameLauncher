<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mygame_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/content_fragment_height" >

    <com.ireadygo.app.gamelauncher.ui.store.StoreEmptyView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/mygame_emptyview_margin_bottom"
        android:visibility="gone" >
    </com.ireadygo.app.gamelauncher.ui.store.StoreEmptyView>

    <com.ireadygo.app.gamelauncher.ui.widget.mutillistview.HMultiListView
        android:id="@+id/mutillist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:hlv_horizontal_spacing="@dimen/mygame_mhlv_horizontal_spacing"
        app:hlv_vertical_spacing="@dimen/mygame_mhlv_vertical_spacing" >
    </com.ireadygo.app.gamelauncher.ui.widget.mutillistview.HMultiListView>

</RelativeLayout>