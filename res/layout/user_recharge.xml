<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="110dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp" >

        <TextView
            android:id="@+id/balance_title"
            style="@style/TextLabelSmallLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recharge_my_balance" />

        <TextView
            android:id="@+id/rabbit_currency"
            style="@style/TextLabelExtraBigLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_title"
            android:layout_marginTop="30dp"
            android:text="200"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rabbit_currency_title"
            style="@style/TextLabelExtraSmallLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rabbit_currency"
            android:text="@string/recharge_rubbit_currency" />

        <TextView
            android:id="@+id/snail_point"
            style="@style/TextLabelExtraBigLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rabbit_currency"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@id/rabbit_currency"
            android:text="1800"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/snail_point_title"
            style="@style/TextLabelExtraSmallLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/snail_point"
            android:layout_below="@id/snail_point"
            android:text="@string/snail_point" />

        <TextView
            android:id="@+id/rabbit_recharge"
            style="@style/TextLabelMiddleLight"
            android:layout_width="480dp"
            android:layout_height="106dp"
            android:layout_alignBottom="@id/snail_point_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="464dp"
            android:background="@drawable/corner_orange_shape"
            android:gravity="center"
            android:text="@string/recharge_rubbit_recharge" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/gift_certificate_recharge_title"
            style="@style/TextLabelSmallLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recharge_ticket_recharge" />

        <Spinner
            android:id="@+id/snail_point_select"
            style="@style/AccountSpinner"
            android:layout_width="580dp"
            android:layout_height="106dp"
            android:layout_below="@id/gift_certificate_recharge_title"
            android:layout_marginTop="22dp"
            android:entries="@array/recharge_ticket_types"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:text="@string/snail_point" />

        <com.ireadygo.app.gamelauncher.ui.widget.CustomerEditText
            android:id="@+id/gift_certificate_recharge"
            style="@style/TextLabelMiddleLight"
            android:layout_width="580dp"
            android:layout_height="106dp"
            android:layout_below="@id/snail_point_select"
            android:layout_marginTop="36dp"
            android:background="@drawable/custom_edittext_bg_selector"
            android:text="12345679" />

        <TextView
            android:id="@+id/gift_certificate_recharge_btn"
            style="@style/TextLabelMiddleLight"
            android:layout_width="480dp"
            android:layout_height="106dp"
            android:layout_alignBottom="@id/gift_certificate_recharge"
            android:layout_alignParentRight="true"
            android:layout_marginRight="464dp"
            android:background="@drawable/corner_orange_shape"
            android:gravity="center"
            android:text="@string/recharge_ticket_recharge" />
    </RelativeLayout>

</LinearLayout>