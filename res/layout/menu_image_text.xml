<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:duplicateParentState="true"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="@dimen/menu_image_width"
        android:layout_height="@dimen/menu_image_width"
        android:layout_marginLeft="@dimen/menu_item_margin_left"
        android:duplicateParentState="true"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/menu_text"
        style="@style/MenuTitle"
        android:layout_marginTop="@dimen/menu_item_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:textColor="@color/menu_title_selector"
        android:visibility="invisible" />

</LinearLayout>