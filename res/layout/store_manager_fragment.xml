<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ireadygo.app.gamelauncher"
    android:layout_width="@dimen/content_fragment_width"
    android:layout_height="match_parent"
    android:duplicateParentState="true" >

    <com.ireadygo.app.gamelauncher.ui.widget.StatisticsTitleView
        android:id="@+id/store_manager_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/content_fragment_padding_left"
        android:paddingTop="@dimen/content_fragment_padding_top" >
    </com.ireadygo.app.gamelauncher.ui.widget.StatisticsTitleView>

    <LinearLayout
        android:id="@+id/store_manager_option_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/store_manager_title_layout"
        android:layout_marginLeft="@dimen/store_manager_menu_margin_left"
        android:orientation="vertical" >

        <com.ireadygo.app.gamelauncher.ui.menu.ImageTextMenu
            android:id="@+id/manager_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/store_manager_menu_margin_top"
            android:nextFocusDown="@+id/manager_upgrade"
            android:nextFocusLeft="@+id/store_menu_manager"
            android:nextFocusRight="@+id/manager_viewpager"
            android:nextFocusUp="@+id/manager_download"
            app:menu_icon="@drawable/store_manager_download_selector"
            app:menu_title="@string/store_manager_downloading" >
        </com.ireadygo.app.gamelauncher.ui.menu.ImageTextMenu>

        <com.ireadygo.app.gamelauncher.ui.menu.ImageTextMenu
            android:id="@+id/manager_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/store_manager_menu_margin_top"
            android:nextFocusDown="@+id/manager_installed"
            android:nextFocusLeft="@+id/store_menu_manager"
            android:nextFocusRight="@+id/manager_viewpager"
            android:nextFocusUp="@+id/manager_download"
            app:menu_icon="@drawable/store_manager_upgrade_selector"
            app:menu_title="@string/store_manager_updatable" >
        </com.ireadygo.app.gamelauncher.ui.menu.ImageTextMenu>

        <com.ireadygo.app.gamelauncher.ui.menu.ImageTextMenu
            android:id="@+id/manager_installed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/store_manager_menu_margin_top"
            android:nextFocusDown="@+id/manager_installed"
            android:nextFocusLeft="@+id/store_menu_manager"
            android:nextFocusRight="@+id/manager_viewpager"
            android:nextFocusUp="@+id/manager_upgrade"
            app:menu_icon="@drawable/store_manager_installed_selector"
            app:menu_title="@string/store_manager_launchable" >
        </com.ireadygo.app.gamelauncher.ui.menu.ImageTextMenu>
    </LinearLayout>

    <com.ireadygo.app.gamelauncher.ui.widget.mutillistview.HMultiListView
        android:id="@+id/manager_viewpager"
        style="@style/MultiListNormal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/store_manager_title_layout"
        android:layout_toRightOf="@+id/store_manager_option_layout" >
    </com.ireadygo.app.gamelauncher.ui.widget.mutillistview.HMultiListView>

</RelativeLayout>