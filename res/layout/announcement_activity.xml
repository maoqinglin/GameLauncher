<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".AnnouncementActivity" >

    <TextView
        android:id="@+id/tv_announcement_goback"
        style="@style/GobackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/announcement_goback_margin_left"
        android:text="@string/goback" />

    <com.ireadygo.app.gamelauncher.ui.widget.HListView
        android:id="@+id/hlist_announcement_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/announcement_hlistview_height"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_announcement_goback"
        android:layout_marginLeft="@dimen/announcement_hlistview_margin_left"
        android:nextFocusDown="@+id/hlist_announcement_down" />

    <com.ireadygo.app.gamelauncher.ui.widget.HListView
        android:id="@+id/hlist_announcement_down"
        android:layout_width="match_parent"
        android:layout_height="@dimen/announcement_hlistview_height"
        android:layout_alignLeft="@id/hlist_announcement_up"
        android:layout_below="@id/hlist_announcement_up"
        android:nextFocusUp="@+id/hlist_announcement_up" />

</RelativeLayout>