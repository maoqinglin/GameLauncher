<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false" >

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/game_item_bg" />

    <RelativeLayout
        android:id="@+id/icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/mygame_app_width"
            android:layout_height="@dimen/mygame_app_height" />

        <TextView
            android:id="@+id/title"
            style="@style/mygame_game_text_style"
            android:layout_width="@dimen/mygame_app_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:gravity="center" />

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon"
            android:layout_alignRight="@+id/icon"
            android:src="@drawable/icon_gametask_delete"
            android:visibility="invisible" />

    </RelativeLayout>

</FrameLayout>