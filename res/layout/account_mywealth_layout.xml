<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/account_photo_default"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/TextLabelSmallDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mywealth_username_margin_top" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_account_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mywealth_prize_margin_left"
        android:layout_toRightOf="@id/ll_account_info" >

        <TextView
            android:id="@+id/tv_prize_gold"
            style="@style/TextLabelMiddleLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/account_prize_gold"
            android:drawablePadding="@dimen/mywealth_drawable_padding"
            android:paddingRight="@dimen/mywealth_txt_padding_right" />

        <TextView
            android:id="@+id/tv_prize_silver"
            style="@style/TextLabelMiddleLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/account_prize_silver"
            android:drawablePadding="@dimen/mywealth_drawable_padding"
            android:paddingRight="@dimen/mywealth_txt_padding_right" />

        <TextView
            android:id="@+id/tv_prize_copper"
            style="@style/TextLabelMiddleLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mywealth_prize_copper_margin_right"
            android:drawableLeft="@drawable/account_prize_copper"
            android:drawablePadding="@dimen/mywealth_drawable_padding" />

        <TextView
            android:id="@+id/tv_game_count"
            style="@style/TextLabelMiddleLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/mywealth_drawable_padding" />

        <TextView
            android:id="@+id/tv_game_count_label"
            style="@style/TextLabelSmallDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mywealth_game_counts" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_account_wealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ll_account_prize"
        android:layout_below="@id/ll_account_prize"
        android:layout_marginTop="@dimen/mywealth_wealth_margin_top" >

        <TextView
            android:id="@+id/tv_rabbit_currency"
            style="@style/TextLabelMiddleLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/mywealth_txt_padding_right" />

        <TextView
            android:id="@+id/tv_rabbit_currency_label"
            style="@style/TextLabelSmallDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mywealth_txt_label_margin_right"
            android:text="@string/recharge_rubbit_currency" />

        <TextView
            android:id="@+id/tv_rabbit_tickets"
            style="@style/TextLabelMiddleLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/mywealth_txt_padding_right" />

        <TextView
            android:id="@+id/tv_rabbit_tickets_label"
            style="@style/TextLabelSmallDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mywealth_txt_label_margin_right"
            android:text="@string/recharge_rubbit_ticket" />

        <TextView
            android:id="@+id/tv_game_points"
            style="@style/TextLabelMiddleLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/mywealth_txt_padding_right" />

        <TextView
            android:id="@+id/tv_game_points_lable"
            style="@style/TextLabelSmallDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mywealth_game_points" />
    </LinearLayout>

    <com.ireadygo.app.gamelauncher.ui.widget.OperationTipsLayout
        android:id="@+id/operationTipsLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tips_height"
        android:layout_alignParentBottom="true" >
    </com.ireadygo.app.gamelauncher.ui.widget.OperationTipsLayout>

</RelativeLayout>