<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/store_options_width"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/store_options_icon_category" />

    <TextView
        android:id="@+id/title"
        style="@style/TextLabelMiddleLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:layout_marginTop="@dimen/store_options_title_margin_top"
        android:text="@string/store_options_category" />

</LinearLayout>