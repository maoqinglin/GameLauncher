<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ireadygo.app.gamelauncher"
    android:layout_width="@dimen/content_fragment_width"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/content_fragment_padding_top" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />

        <TextView
            android:id="@+id/alipay_account_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_alipay_account_state_margin_left"
            android:text="@string/user_alipay_account_bind"
            android:textColor="@color/orange_dark"
            android:textSize="@dimen/user_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_text_margin_top"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_play_time_title"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />

        <ProgressBar
            android:id="@+id/play_time_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/user_play_time_progress_width"
            android:layout_height="@dimen/user_play_time_progress_height"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:progress="0"
            android:progressDrawable="@drawable/user_play_time_progress_list" />

        <TextView
            android:id="@+id/play_time_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_alipay_account_state_margin_left"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_text_margin_top"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/feedback_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />

        <TextView
            android:id="@+id/feedback_months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_alipay_account_state_margin_left"
            android:textColor="@color/white"
            android:textSize="@dimen/user_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_option_margin_top"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/user_center_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_option_margin_right" >

            <ImageView
                android:id="@+id/user_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_icon_center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/user_option_title_margin_bottom"
                android:text="@string/user_center"
                android:textColor="@color/white"
                android:textSize="@dimen/user_text_size" >
            </TextView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/user_notice_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_option_margin_right" >

            <ImageView
                android:id="@+id/user_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_icon_notice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/user_option_title_margin_bottom"
                android:text="@string/user_notice"
                android:textColor="@color/white"
                android:textSize="@dimen/user_text_size" >
            </TextView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/user_recharge_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/user_option_margin_right" >

            <ImageView
                android:id="@+id/user_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_icon_recharge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/user_option_title_margin_bottom"
                android:text="@string/user_recharge"
                android:textColor="@color/white"
                android:textSize="@dimen/user_text_size" >
            </TextView>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>